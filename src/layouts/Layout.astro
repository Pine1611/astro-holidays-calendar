---
import Sidebar from "../layouts/Sidebar.astro";

import "../assets/styles/global.css";
---

<html lang="en" data-theme="dark">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta charset="utf-8" />

		<title>Holidays Calendar - You've ripped a hole in the fabric of the internet. Love, from Pine!</title>

		<meta name="description" content="A calendar events using fullcalendar.io" />
		<meta
			name="keywords"
			content="template, template-html-css, sass, responsive, responsive-design, calendar-events, fullcalendar-io"
		/>
		<meta
			name="viewport"
			content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
		/>
		<meta name="author" content="Pine!" />
		<link rel="icon" type="favicon" href="/images/fav-ico.gif" />
	</head>

	<body class="h-screen w-full bg-slate-50">
		<div class="flex h-full flex-col md:flex-row">
			<Sidebar />

			<div class="relative flex basis-2/3 items-center justify-center p-5">
				<img
					class="fixed top-0 left-0 -z-1 h-full w-full blur-[100px]"
					src="/images/background.svg"
					alt=""
					fetchpriority="high"
				/>

				<slot />
			</div>
		</div>
	</body>
</html>
